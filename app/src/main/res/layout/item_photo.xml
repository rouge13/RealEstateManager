<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">
    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/property_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/property_image"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/photo_property"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_duplex" />

                <TextView
                    android:id="@+id/property_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10sp"
                    android:text="@string/photo_description"
                    android:textSize="15sp" />

                <!-- Black line below each CardView -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/paleGray" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/primary_photo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/remove_photo"
                    tools:background="@drawable/ic_edit_black_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/go_to_restaurant_selection"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/remove_photo"
                    tools:background="@drawable/ic_delete_black_24" />

            </LinearLayout>


        </FrameLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>