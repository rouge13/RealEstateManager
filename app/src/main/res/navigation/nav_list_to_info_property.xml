<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_list_to_info_property"
    app:startDestination="@id/propertyListFragment">

    <fragment
        android:id="@+id/propertyListFragment"
        android:name="com.openclassrooms.realestatemanager.ui.property_list.PropertyListFragment"
        android:label="Property List"
        tools:layout="@layout/fragment_property_list">
        <action
            android:id="@+id/action_propertyListFragment_to_infoPropertyFragment"
            app:destination="@id/infoPropertyFragment" />
        <action
            android:id="@+id/action_propertyListFragment_to_loginFragment"
            app:destination="@id/loginFragment"/>
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.openclassrooms.realestatemanager.ui.map.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/infoPropertyFragment"
        android:name="com.openclassrooms.realestatemanager.ui.property.PropertyInfoFragment"
        android:label="Property Info"
        tools:layout="@layout/fragment_info_property">
        <action android:id="@+id/action_infoPropertyFragment_to_propertyListFragment"
            app:destination="@id/propertyListFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.openclassrooms.realestatemanager.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_propertyListFragment"
            app:destination="@id/propertyListFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.openclassrooms.realestatemanager.ui.register.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_propertyListFragment"
            app:destination="@id/propertyListFragment" />
    </fragment>
</navigation>



